# Copy file này thành .env và điền giá trị thực
GEMINI_API_KEY=your_gemini_api_key_here

# Embedding model (chạy local, không cần key)
EMBEDDING_MODEL=keepitreal/vietnamese-sbert

# Chunking config
CHUNK_SIZE=256
CHUNK_OVERLAP=50

# Retrieval config  
TOP_K=5
BM25_WEIGHT=0.5
SEMANTIC_WEIGHT=0.5

# Database
DATABASE_URL=sqlite:///./chatbot.db

# Server
HOST=0.0.0.0
PORT=8000
